<h1>Edit Tenant Information</h1>

<form action="/tenants/<%= @tenant.id%>" method="post">
<input type="hidden" name="_method" value="patch" />

<label>Name:</label>
<input type="text" name="name" value="<%= @tenant.name %>" /><br>

<select name="existing_apt_id">
    <option disabled selected> -- Select an Apartment -- </option>
    <% @apartments.each do |apt| %>
        <option value=<%= apt.id %> > 
            <%= apt.address %> 
        </option>
    <% end %>

</select>


<label>Create an Address:</label>
<input type="text" name="new_address" /><br>


<input type="submit" value="Edit tenant"/>

</form>