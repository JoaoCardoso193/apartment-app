<h4> Form to create a tenant: </h4>

<form action="/tenants" method="post">

 <label> Name: </label>
 <input type="text" name="name" />

<br/> 

<select name="existing_apt_id">
    <option disabled selected> -- Select an Apartment -- </option>
    <% @apartments.each do |apt| %>
        <option value=<%= apt.id %> > 
            <%= apt.address %> 
        </option>
    <% end %>
</select>


<label>Create an Address:</label>
<input type="text" name="new_address" /><br>

 <input type="submit" value="Create tenant">

</form>